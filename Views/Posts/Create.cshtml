@model projektuppgift.Models.Post

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div>
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="PostTitle"></label>
                <input asp-for="PostTitle" />
                <span asp-validation-for="PostTitle"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author"></label>
                <input asp-for="Author" value="@User.Identity.Name" />
                <span asp-validation-for="Author"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content"></textarea>
                <div class="count-wrap">
                    <span id="char-count"></span><span> tecken kvar</span>
                </div>
                <span asp-validation-for="Content"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div>
                <input type="submit" value="Create" class="main-button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

